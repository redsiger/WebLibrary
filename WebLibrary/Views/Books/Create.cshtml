        <div class="form-group row">
            <h2 class="text-black-50 pl-3">Добавить книгу</h2>
        </div>
                 <div class="form-group row">
                     <div class="col-3">
                         <label asp-for="Name"></label>
                     </div>
                     <div class="col-3">
                         <label asp-for="Author"></label>
                     </div>
                     <div class="col-3">
                         <label asp-for="Genre"></label>
                     </div>
                     <div class="col-3">
                         <label asp-for="Publisher"></label>
                     </div>
                 </div>
                 <div class="form-group row">
                     <div class="col-3">
                         <input asp-for="Name" class="form-control" />
                     </div>
                     <div class="col-3">
                         <input asp-for="Author" class="form-control" />
                     </div>
                     <div class="col-3">
                         <input asp-for="Genre" class="form-control" />
                     </div>
                     <div class="col-3">
                         <input asp-for="Genre" class="form-control" />
                     </div>
                 </div>
                <div class="form-group row">
                    <div class="col-8 offset-2 row">
                        <div class="col">
                            <input type="submit" class="btn btn-info w-75" value="Добавить книгу" />
                        </div>
                        <div class="col">
                            <a asp-action="Index" class="btn btn-danger w-75">Назад</a>
                        </div>
                    </div>
                </div>
    </div>
</form>